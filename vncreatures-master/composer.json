{
    "require": {
        "monolog/monolog": "^2.1",
        "php-di/php-di": "^6.2",
        "respect/validation": "^2.1",
        "selective/basepath": "^1.0",
        "slim/psr7": "^1.1",
        "slim/slim": "4.*",
        "tuupola/slim-jwt-auth": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
